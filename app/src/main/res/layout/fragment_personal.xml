<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Compact User Card (Avatar + Name only) -->
        <LinearLayout
            android:id="@+id/compactUserCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <!-- Avatar -->
            <FrameLayout
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/bg_avatar_circle">

                <ImageView
                    android:id="@+id/avatarImage"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_avatar"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_avatar_circle"
                    android:clipToOutline="true"
                    android:contentDescription="Avatar" />
            </FrameLayout>

            <!-- Name -->
            <TextView
                android:id="@+id/txtDisplayName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="Loading..."
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <!-- Arrow -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                android:rotation="180"
                android:contentDescription="View profile"
                android:tint="#999999" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#F5F5F5" />

        <!-- Menu Items Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF">

            <!-- QR Wallet -->
            <include
                android:id="@+id/menuQrWallet"
                layout="@layout/item_personal_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginStart="72dp" />

            <!-- Account & Security -->
            <include
                android:id="@+id/menuSecurity"
                layout="@layout/item_personal_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginStart="72dp" />

            <!-- Privacy -->
            <include
                android:id="@+id/menuPrivacy"
                layout="@layout/item_personal_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginStart="72dp" />

            <!-- My Cloud -->
            <include
                android:id="@+id/menuCloud"
                layout="@layout/item_personal_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
