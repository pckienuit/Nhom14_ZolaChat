<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Container với tỉ lệ 9:16 -->
        <FrameLayout
            android:id="@+id/videoContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="H,9:16"
            app:layout_constraintTop_toTopOf="parent">

            <!-- WebView để phát video, ẩn ban đầu -->
            <WebView
                android:id="@+id/webViewVideo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <!-- Ảnh thumbnail, hiển thị ban đầu -->
            <ImageView
                android:id="@+id/imgThumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="#E0E0E0"
                tools:src="@tools:sample/backgrounds/scenic"/>

            <!-- Biểu tượng Play -->
            <ImageView
                android:id="@+id/imgPlayIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_play_circle_filled"
                app:tint="@color/white"
                android:layout_gravity="center"/>

        </FrameLayout>

        <!-- Tiêu đề video -->
        <TextView
            android:id="@+id/txtVideoTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/videoContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Đây là tiêu đề của một video rất dài để kiểm tra cắt chữ" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
