<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="6dp"
    android:paddingEnd="6dp"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="8dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:gravity="start">

    <!-- Sender Name (for group chats) -->
    <TextView
        android:id="@+id/senderNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sender Name"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="2dp"
        android:visibility="gone" />

    <!-- Forwarded Indicator -->
    <TextView
        android:id="@+id/forwardedIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đã chuyển tiếp một tin nhắn"
        android:textSize="11sp"
        android:textColor="@color/textSecondary"
        android:textStyle="italic"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="2dp"
        android:visibility="gone" />

    <!-- Message bubble with pin indicator -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:minWidth="260dp"
                android:maxWidth="300dp"
                android:background="@drawable/bg_bubble_received">

                <!-- Reply Preview (hidden initially) -->
                <LinearLayout
                    android:id="@+id/replyPreviewContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_reply_preview"
                    android:paddingStart="8dp"
                    android:paddingEnd="12dp"
                    android:paddingVertical="8dp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone">

                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary"
                        android:layout_marginEnd="8dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/replyToSenderName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sender Name"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/replyToContent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reply content"
                            android:textSize="13sp"
                            android:textColor="@color/textSecondary"
                            android:maxLines="2"
                            android:ellipsize="end" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Voice Message Content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Play/Pause Button -->
                    <ImageButton
                        android:id="@+id/voicePlayPauseButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/ic_media_play"
                        android:background="@drawable/circle_blue_bg"
                        android:padding="8dp"
                        android:scaleType="fitCenter"
                        android:tint="@android:color/white"
                        android:contentDescription="Play voice message" />

                    <!-- Waveform + Duration -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="8dp">

                        <!-- Waveform -->
                        <com.example.doan_zaloclone.ui.room.WaveformView
                            android:id="@+id/voiceWaveform"
                            android:layout_width="match_parent"
                            android:layout_height="32dp" />

                        <!-- Duration -->
                        <TextView
                            android:id="@+id/voiceDurationText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00 / 00:05"
                            android:textSize="11sp"
                            android:textColor="@color/zalo_text_primary"
                            android:typeface="monospace"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Speed Button -->
                    <TextView
                        android:id="@+id/voiceSpeedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1x"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:background="@drawable/rounded_gray_bg_small"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:minWidth="32dp"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Pin indicator at top-right -->
        <androidx.cardview.widget.CardView
            android:id="@+id/pinIndicator"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="-6dp"
            android:layout_marginEnd="-6dp"
            app:cardCornerRadius="9dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#CC000000"
            android:visibility="gone">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_pin_white"
                android:contentDescription="@string/pinned_message" />

        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <!-- Timestamp and Reaction row -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|start"
        android:layout_gravity="start"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp">

        <TextView
            android:id="@+id/timestampTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:30"
            android:textSize="12sp"
            android:textColor="@color/textSecondary" />

        <!-- Reaction container -->
        <LinearLayout
            android:id="@+id/reactionContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:visibility="visible">

            <!-- Existing reactions -->
            <LinearLayout
                android:id="@+id/existingReactionsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_reaction_container"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:visibility="gone">

                <!-- All 6 reaction types copied from sent layout -->
                <LinearLayout android:id="@+id/heartReactionLayout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:visibility="gone">
                    <ImageView android:layout_width="14dp" android:layout_height="14dp" android:src="@drawable/ic_reaction_heart" />
                    <TextView android:id="@+id/heartReactionCount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="10sp" android:textColor="#333333" android:layout_marginStart="1dp" android:layout_marginEnd="3dp" />
                </LinearLayout>

                <LinearLayout android:id="@+id/likeReactionLayout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:visibility="gone">
                    <ImageView android:layout_width="14dp" android:layout_height="14dp" android:src="@drawable/ic_reaction_like" />
                    <TextView android:id="@+id/likeReactionCount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="10sp" android:textColor="#333333" android:layout_marginStart="1dp" android:layout_marginEnd="3dp" />
                </LinearLayout>

                <LinearLayout android:id="@+id/hahaReactionLayout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:visibility="gone">
                    <ImageView android:layout_width="14dp" android:layout_height="14dp" android:src="@drawable/ic_reaction_haha" />
                    <TextView android:id="@+id/hahaReactionCount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="10sp" android:textColor="#333333" android:layout_marginStart="1dp" android:layout_marginEnd="3dp" />
                </LinearLayout>

                <LinearLayout android:id="@+id/sadReactionLayout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:visibility="gone">
                    <ImageView android:layout_width="14dp" android:layout_height="14dp" android:src="@drawable/ic_reaction_sad" />
                    <TextView android:id="@+id/sadReactionCount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="10sp" android:textColor="#333333" android:layout_marginStart="1dp" android:layout_marginEnd="3dp" />
                </LinearLayout>

                <LinearLayout android:id="@+id/angryReactionLayout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:visibility="gone">
                    <ImageView android:layout_width="14dp" android:layout_height="14dp" android:src="@drawable/ic_reaction_angry" />
                    <TextView android:id="@+id/angryReactionCount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="10sp" android:textColor="#333333" android:layout_marginStart="1dp" android:layout_marginEnd="3dp" />
                </LinearLayout>

                <LinearLayout android:id="@+id/wowReactionLayout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:visibility="gone">
                    <ImageView android:layout_width="14dp" android:layout_height="14dp" android:src="@drawable/ic_reaction_wow" />
                    <TextView android:id="@+id/wowReactionCount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="10sp" android:textColor="#333333" android:layout_marginStart="1dp" android:layout_marginEnd="3dp" />
                </LinearLayout>

            </LinearLayout>

            <!-- Add reaction button -->
            <ImageView
                android:id="@+id/addReactionButton"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_reaction_heart_outline"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Add reaction" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
