<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="6dp"
    android:paddingEnd="6dp"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="8dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:gravity="start">
    
    <TextView
        android:id="@+id/senderNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sender Name"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="2dp"
        android:visibility="gone" />

    <!-- Forwarded Indicator (visible only when message is forwarded from another user) -->
    <TextView
        android:id="@+id/forwardedIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đã chuyển tiếp một tin nhắn"
        android:textSize="11sp"
        android:textColor="@color/textSecondary"
        android:textStyle="italic"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="2dp"
        android:visibility="gone" />

    <!-- Message bubble with pin indicator -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#D4EDFC">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:maxWidth="280dp"
                android:minWidth="100dp">

                <!-- Reply Preview (visible only when replying to another message) -->
                <LinearLayout
                    android:id="@+id/replyPreviewContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_reply_preview"
                    android:paddingStart="8dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone">

                    <!-- Left border bar -->
                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary"
                        android:layout_marginEnd="8dp" />

                    <!-- Reply content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/replyToSenderName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sender Name"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/replyToContent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reply content"
                            android:textSize="13sp"
                            android:textColor="@color/textSecondary"
                            android:maxLines="2"
                            android:ellipsize="end" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/messageTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Message content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:padding="12dp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Pin indicator at top-right corner - uses negative margin to protrude -->
        <androidx.cardview.widget.CardView
            android:id="@+id/pinIndicator"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="-6dp"
            android:layout_marginEnd="-6dp"
            app:cardCornerRadius="9dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#CC000000"
            android:visibility="gone">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_pin_white"
                android:contentDescription="@string/pinned_message" />

        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <TextView
        android:id="@+id/timestampTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:30"
        android:textSize="12sp"
        android:textColor="@color/textSecondary"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp" />

</LinearLayout>
