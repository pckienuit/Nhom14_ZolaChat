<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Pack Icon -->
        <ImageView
            android:id="@+id/packIcon"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:background="@color/zalo_background_gray"
            android:contentDescription="Pack icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Pack Name -->
            <TextView
                android:id="@+id/packName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pack Name"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/zalo_text_primary"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Pack Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/stickerCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="24 stickers"
                    android:textSize="12sp"
                    android:textColor="@color/textSecondary" />

                <TextView
                    android:id="@+id/downloadCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="↓ 1.2K"
                    android:textSize="11sp"
                    android:textColor="@color/textSecondary" />

            </LinearLayout>

            <!-- Download Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDownload"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="Tải xuống"
                android:textSize="12sp"
                android:textColor="@color/white"
                app:backgroundTint="@color/colorPrimary"
                app:cornerRadius="18dp"
                android:layout_marginTop="8dp"
                app:icon="@drawable/ic_download"
                app:iconSize="16dp"
                app:iconGravity="textStart"
                app:iconPadding="4dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
