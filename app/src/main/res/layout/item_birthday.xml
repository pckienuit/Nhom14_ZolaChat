<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground">

    <!-- Avatar -->
    <ImageView
        android:id="@+id/avatarImage"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_avatar"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_circle_avatar_default"
        android:contentDescription="Avatar" />

    <!-- User Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên bạn bè"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/birthdayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="01/01/2000"
            android:textSize="14sp"
            android:textColor="#757575" />

    </LinearLayout>

    <!-- Days Until Birthday -->
    <TextView
        android:id="@+id/daysUntilText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Còn 5 ngày"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#0068FF"
        android:layout_marginStart="16dp" />

    <!-- Birthday Icon -->
    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_birthday_blue"
        android:layout_marginStart="8dp"
        android:contentDescription="Birthday" />

</LinearLayout>
