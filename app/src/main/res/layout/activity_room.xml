<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zalo_background_gray">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@drawable/bg_gradient_blue"
        android:paddingTop="45dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:contentInsetStartWithNavigation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chat Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:ellipsize="end"
                android:maxLines="1" />
            
            <ImageButton
                android:id="@+id/voiceCallButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_phone_outline"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:tint="@color/white"
                android:contentDescription="Voice call" />

            <ImageButton
                android:id="@+id/videoCallButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_video_call_outline"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:tint="@color/white"
                android:contentDescription="Video call" />

            <ImageButton
                android:id="@+id/menuButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_menu_list" 
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:tint="@color/white"
                android:contentDescription="Menu" />
                
            <!-- Hidden original buttons for compatibility logic -->
            <ImageButton
                 android:id="@+id/fileManagementButton"
                 android:layout_width="0dp"
                 android:layout_height="0dp"
                 android:visibility="gone"/>

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <!-- Pinned messages bar (initially hidden) -->
    <FrameLayout
        android:id="@+id/pinnedMessagesContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <include layout="@layout/layout_pinned_message_bar" />
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messagesRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:layout_constraintTop_toBottomOf="@id/pinnedMessagesContainer"
        app:layout_constraintBottom_toTopOf="@id/inputContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Container for input layouts -->
    <LinearLayout
        android:id="@+id/inputContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@id/imagePickerContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Reply bar (hidden by default) -->
        <include 
            android:id="@+id/replyBarLayout"
            layout="@layout/layout_reply_bar" />

        <!-- Normal input layout (default) -->
        <LinearLayout
            android:id="@+id/normalInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp"
            android:paddingVertical="6dp"
            android:visibility="visible">

            <!-- Sticker Button (Left) -->
            <ImageButton
                android:id="@+id/stickerButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_sticker_outline"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="#666666"
                android:contentDescription="Sticker" />

            <!-- Input EditText -->
            <EditText
                android:id="@+id/messageEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="8dp"
                android:hint="Tin nhắn"
                android:paddingVertical="8dp"
                android:paddingHorizontal="12dp"
                android:background="@drawable/bg_message_input" 
                android:textSize="16sp"
                android:maxLines="5"
                android:inputType="textMultiLine|textCapSentences" />
            
             <!-- Right Action Buttons -->
             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:gravity="center_vertical">
                 
                 <ImageButton
                    android:id="@+id/moreActionsButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_more_horiz"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:tint="#666666"
                    android:contentDescription="More actions" />

                 <ImageButton
                    android:id="@+id/voiceRecordButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_microphone"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:tint="#666666"
                    android:contentDescription="Voice record" />

                <ImageButton
                    android:id="@+id/attachImageButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_gallery_orange" 
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Attach image" />
                
                <!-- Send button (initially hidden or replaces mic when typing, but keeping for logic for now) -->
               <ImageButton
                    android:id="@+id/sendButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_send_blue"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:visibility="gone"
                    android:contentDescription="Send" />

             </LinearLayout>

        </LinearLayout>

        <!-- Voice Recording UI (hidden by default) -->
        <LinearLayout
            android:id="@+id/recordingInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:visibility="gone"
            android:background="#FFF3F3F3">

            <!-- Recording indicator -->
            <View
                android:id="@+id/recordingIndicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@android:drawable/presence_audio_online"
                android:backgroundTint="@android:color/holo_red_dark" />

            <!-- Waveform visualization (Phase 4D-2) -->
            <com.example.doan_zaloclone.ui.room.WaveformView
                android:id="@+id/waveformView"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp" />

            <!-- Recording timer -->
            <TextView
                android:id="@+id/recordingTimerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_red_dark"
                android:minWidth="60dp"
                android:gravity="end" />

            <!-- Delete button -->
            <ImageButton
                android:id="@+id/deleteRecordingButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="#999999"
                android:contentDescription="Delete recording" />

            <!-- Stop button -->
            <ImageButton
                android:id="@+id/stopRecordingButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_media_pause"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="@android:color/holo_red_dark"
                android:contentDescription="Stop recording" />

        </LinearLayout>

        <!-- Image mode input layout (hidden by default) -->
        <LinearLayout
            android:id="@+id/imageInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:visibility="gone"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="@color/colorPrimary"
                android:contentDescription="Back" />

            <Spinner
                android:id="@+id/qualitySpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="8dp"
                android:entries="@array/image_quality_options" />

            <TextView
                android:id="@+id/selectedCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="0 ảnh"
                android:textSize="14sp"
                android:textColor="#666666" />

            <ImageButton
                android:id="@+id/sendImagesButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_send"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="@color/colorPrimary"
                android:contentDescription="Send images" />

        </LinearLayout>

    </LinearLayout>

    <!-- Container for image picker bottom sheet -->
    <FrameLayout
        android:id="@+id/imagePickerContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/actionMenuContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Container for action menu bottom sheet -->
    <FrameLayout
        android:id="@+id/actionMenuContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
