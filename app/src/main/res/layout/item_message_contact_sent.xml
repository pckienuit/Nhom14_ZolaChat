<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="end"
    android:padding="8dp">

    <!-- Contact Card Container -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/contactCardContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="64dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#E3F2FD">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Contact Info Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Contact Avatar -->
                <ImageView
                    android:id="@+id/contactAvatar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_avatar"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_avatar_circle"
                    android:clipToOutline="true"
                    android:contentDescription="Contact avatar" />

                <!-- Contact Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <!-- Contact Name -->
                    <TextView
                        android:id="@+id/contactName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tên liên hệ"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <!-- Contact Phone (if available) -->
                    <LinearLayout
                        android:id="@+id/phoneContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_phone"
                            android:tint="#666666"
                            android:contentDescription="Phone icon" />

                        <TextView
                            android:id="@+id/contactPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="0123456789"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Action Buttons Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="end">

                <!-- Add Friend Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddFriendFromCard"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="@string/button_add_friend"
                    android:textSize="12sp"
                    android:paddingHorizontal="12dp"
                    android:visibility="gone"
                    app:icon="@drawable/ic_person_add"
                    app:iconSize="18dp"
                    app:iconGravity="textStart" />

                <!-- Call Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCallFromCard"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:text="@string/button_call"
                    android:textSize="12sp"
                    android:paddingHorizontal="12dp"
                    android:visibility="gone"
                    android:backgroundTint="@color/colorPrimary"
                    app:icon="@drawable/ic_phone"
                    app:iconSize="18dp"
                    app:iconGravity="textStart" />
            </LinearLayout>

            <!-- Timestamp -->
            <TextView
                android:id="@+id/messageTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="4dp"
                android:textSize="11sp"
                android:textColor="#999999"
                android:text="00:00" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
