<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="end"
    android:padding="8dp">

    <!-- Contact Card Container -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/contactCardContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="64dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Blue Gradient Header -->
            <RelativeLayout
                android:id="@+id/contactHeader"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/bg_gradient_blue"
                android:padding="16dp">

                <!-- Contact Avatar -->
                <ImageView
                    android:id="@+id/contactAvatar"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_avatar"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_avatar_circle"
                    android:clipToOutline="true"
                    android:contentDescription="Contact avatar" />

                <!-- Contact Name -->
                <TextView
                    android:id="@+id/contactName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/contactAvatar"
                    android:layout_alignTop="@id/contactAvatar"
                    android:layout_marginStart="12dp"
                    android:text="Tên liên hệ"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <!-- Contact Phone -->
                <TextView
                    android:id="@+id/contactPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/contactName"
                    android:layout_toEndOf="@id/contactAvatar"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="4dp"
                    android:text="0123456789"
                    android:textSize="16sp"
                    android:textColor="#E3F2FD"
                    android:visibility="gone" />
            </RelativeLayout>

            <!-- Action Buttons Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="0dp">

                <!-- Call Button -->
                <LinearLayout
                    android:id="@+id/btnCallFromCard"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_phone"
                        android:tint="#333333"
                        android:contentDescription="Call icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Gọi điện"
                        android:textSize="15sp"
                        android:textColor="#333333"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="8dp"
                    android:background="#E0E0E0" />

                <!-- Message Button -->
                <LinearLayout
                    android:id="@+id/btnMessageFromCard"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_message"
                        android:tint="@color/colorPrimary"
                        android:contentDescription="Message icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Nhắn tin"
                        android:textSize="15sp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Add Friend Button (Full Width) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddFriendFromCard"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Gửi lời mời kết bạn"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:icon="@drawable/ic_person_add"
                app:iconSize="20dp"
                app:iconGravity="textStart"
                app:strokeColor="@color/colorPrimary"
                app:strokeWidth="1dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Hidden elements for compatibility -->
    <LinearLayout
        android:id="@+id/phoneContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />
</LinearLayout>
