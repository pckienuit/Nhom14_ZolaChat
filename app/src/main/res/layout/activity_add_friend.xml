<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="false"
    android:background="#FFFFFF">

    <!-- Toolbar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@drawable/bg_gradient_blue"
        android:paddingTop="45dp"
        android:paddingBottom="10dp"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm bạn"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF">
        

            
        <!-- Phone Input -->
        <EditText
            android:id="@+id/etSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Số điện thoại hoặc email"
            android:textSize="16sp"
            android:inputType="text"
            android:background="@null"
            android:minHeight="48dp"/>
            
        <Button
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="TÌM"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:backgroundTint="#0091FF"
            app:cornerRadius="18dp"
            android:enabled="false"/>

    </LinearLayout>
    
    <TextView
        android:id="@+id/tvMyQr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mã QR của tôi"
        android:textColor="#0068FF"
        android:gravity="center"
        android:padding="16dp"
        android:background="?selectableItemBackground"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#F2F4F7"/>

    <!-- Search Result Container -->
    <FrameLayout
        android:id="@+id/searchResultContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        
        <!-- User Found Layout -->
        <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:padding="16dp">
             
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:gravity="center_vertical">
                 
                 <ImageView
                     android:id="@+id/imgAvatar"
                     android:layout_width="60dp"
                     android:layout_height="60dp"
                     android:src="@drawable/ic_avatar"
                     android:background="@drawable/bg_circle_avatar_default"/>
                     
                 <LinearLayout
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:orientation="vertical"
                     android:layout_marginStart="16dp">
                     
                     <TextView
                         android:id="@+id/tvName"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="User Name"
                         android:textSize="18sp"
                         android:textStyle="bold"
                         android:textColor="#000000"/>
                         
                     <TextView
                         android:id="@+id/tvPhone"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="User Info"
                         android:textColor="#757575"/>
                 </LinearLayout>
                 
             </LinearLayout>
             
             <Button
                 android:id="@+id/btnAddFriend"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="KẾT BẠN"
                 android:backgroundTint="#0091FF"
                 android:layout_marginTop="24dp"/>
                 
        </LinearLayout>
        
        <!-- Not Found -->
        <TextView
            android:id="@+id/tvNotFound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:text="Không tìm thấy người dùng"
            android:textColor="#757575"
            android:visibility="gone"/>
            
    </FrameLayout>
    
    <!-- Other Options (Scan QR, Directory, etc.) -->
    <LinearLayout
        android:id="@+id/otherOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="?selectableItemBackground">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_qr_code"
                app:tint="#0091FF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quét Mã QR"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <!-- More options can be added here -->
    </LinearLayout>

</LinearLayout>
