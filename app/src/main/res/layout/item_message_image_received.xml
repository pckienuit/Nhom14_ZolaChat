<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="start"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingTop="6dp"
    android:paddingEnd="6dp"
    android:paddingStart="8dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/senderNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sender Name"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:layout_marginBottom="4dp"
        android:visibility="gone" />

    <!-- Forwarded Indicator (visible only when message is forwarded from another user) -->
    <TextView
        android:id="@+id/forwardedIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đã chuyển tiếp một tin nhắn"
        android:textSize="11sp"
        android:textColor="@color/textSecondary"
        android:textStyle="italic"
        android:layout_marginBottom="2dp"
        android:visibility="gone" />

    <!-- Image bubble with pin indicator -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/message_received_background"
            android:padding="8dp">

            <ImageView
                android:id="@+id/messageImageView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:contentDescription="Received image"
                android:adjustViewBounds="true" />

            <TextView
                android:id="@+id/timestampTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="10sp"
                android:textColor="#888888" />

        </LinearLayout>

        <!-- Pin indicator at top-right corner -->
        <androidx.cardview.widget.CardView
            android:id="@+id/pinIndicator"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="-6dp"
            android:layout_marginEnd="-6dp"
            app:cardCornerRadius="9dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#CC000000"
            android:visibility="gone">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_pin_white"
                android:contentDescription="@string/pinned_message" />

        </androidx.cardview.widget.CardView>

    </FrameLayout>

</LinearLayout>
