<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="6dp"
    android:paddingStart="6dp"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="8dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:gravity="end">

    <!-- Message bubble with pin indicator -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/colorPrimary">

            <TextView
                android:id="@+id/messageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message content"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:padding="12dp"
                android:maxWidth="280dp" />

        </androidx.cardview.widget.CardView>

        <!-- Pin indicator at top-left corner - uses negative margin to protrude -->
        <androidx.cardview.widget.CardView
            android:id="@+id/pinIndicator"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="top|start"
            android:layout_marginTop="-6dp"
            android:layout_marginStart="-6dp"
            app:cardCornerRadius="9dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#CC000000"
            android:visibility="gone">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_pin_white"
                android:contentDescription="@string/pinned_message" />

        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <TextView
        android:id="@+id/timestampTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:30"
        android:textSize="12sp"
        android:textColor="@color/textSecondary"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_gravity="end" />

</LinearLayout>
