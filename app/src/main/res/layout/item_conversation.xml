<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:paddingStart="16dp"
    android:paddingTop="12dp"
    android:paddingEnd="16dp"
    android:paddingBottom="12dp">

    <!-- Avatar -->
    <ImageView
        android:id="@+id/avatarImageView"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_avatar"
        android:background="@drawable/bg_avatar_circle"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Group Icon indicator (small circle on avatar) -->
    <ImageView
        android:id="@+id/groupIconImageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/circle_background"
        android:src="@drawable/ic_group"
        android:padding="3dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/avatarImageView"
        app:layout_constraintEnd_toEndOf="@id/avatarImageView" />

    <!-- Name Container -->
    <LinearLayout
        android:id="@+id/nameContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@id/pinIndicator"
        app:layout_constraintStart_toEndOf="@id/avatarImageView"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Tags -->
        <LinearLayout
            android:id="@+id/tagsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="4dp"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="User Name"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />
            
        <TextView
            android:id="@+id/memberCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(3)"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginStart="4dp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Pin Icon (Left of Timestamp) -->
    <ImageView
        android:id="@+id/pinIndicator"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginEnd="6dp"
        android:src="@drawable/ic_pin"
        android:visibility="gone"
        app:tint="#757575"
        app:layout_constraintBottom_toBottomOf="@+id/timestampTextView"
        app:layout_constraintEnd_toStartOf="@+id/timestampTextView"
        app:layout_constraintTop_toTopOf="@+id/timestampTextView" />

    <!-- Timestamp -->
    <TextView
        android:id="@+id/timestampTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="1 giờ"
        android:textColor="#757575"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/nameContainer" />

    <!-- Last Message -->
    <TextView
        android:id="@+id/lastMessageTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Tin nhắn mới..."
        android:textColor="#757575"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/badgeTextView"
        app:layout_constraintStart_toStartOf="@id/nameContainer"
        app:layout_constraintTop_toBottomOf="@id/nameContainer" />

    <!-- Mute Icon -->
    <ImageView
        android:id="@+id/muteIndicator"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_mute_notification"
        android:visibility="gone"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@id/badgeTextView"
        app:layout_constraintEnd_toStartOf="@+id/badgeTextView"
        app:layout_constraintTop_toTopOf="@id/badgeTextView" />

    <!-- Unread Badge -->
    <TextView
        android:id="@+id/badgeTextView"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:minWidth="18dp"
        android:background="@drawable/bg_red_badge_pill"
        android:gravity="center"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="5+"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/lastMessageTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lastMessageTextView" />

    <!-- Divider Line (fake, using view) -->
    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="#E0E0E0"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/nameContainer" />

</androidx.constraintlayout.widget.ConstraintLayout>
