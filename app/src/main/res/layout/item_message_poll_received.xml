<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="start"
    android:layout_marginVertical="4dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="48dp">

    <!-- Poll Container -->
    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pollContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="280dp"
            android:maxWidth="320dp"
            android:orientation="vertical"
            android:padding="12dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“Š BÃ¬nh chá»n"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/pinIndicator"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_pin"
                android:visibility="gone"
                android:contentDescription="Pinned poll" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:alpha="0.1"
            android:layout_marginVertical="8dp" />

        <!-- Question -->
        <TextView
            android:id="@+id/questionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <!-- Options RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/optionsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

        <!-- Add option button (if allowAddOptions) -->
        <TextView
            android:id="@+id/addOptionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ ThÃªm phÆ°Æ¡ng Ã¡n"
            android:textSize="13sp"
            android:textColor="#0068FF"
            android:padding="8dp"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            android:background="?attr/selectableItemBackground" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:alpha="0.1"
            android:layout_marginVertical="8dp" />

        <!-- Footer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/voterCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#757575" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/deadlineText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="11sp"
                    android:textColor="#757575" />

                <TextView
                    android:id="@+id/closePollButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ÄÃ³ng"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FF3B30"
                    android:padding="4dp"
                    android:visibility="gone"
                    android:background="?attr/selectableItemBackground" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Timestamp -->
    <TextView
        android:id="@+id/timestampTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:textSize="11sp"
        android:textColor="#757575"
        android:layout_marginTop="2dp"
        android:layout_marginStart="4dp" />
</LinearLayout>
