<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_gray_bg_small"
    android:padding="12dp"
    android:minWidth="260dp"
    android:maxWidth="300dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Play/Pause Button -->
        <ImageButton
            android:id="@+id/voicePlayPauseButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_media_play"
            android:background="@drawable/circle_blue_bg"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:tint="@android:color/white"
            android:contentDescription="Play voice message" />

        <!-- Waveform Progress Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp">

            <!-- Waveform (acts as progress bar) -->
            <com.example.doan_zaloclone.ui.room.WaveformView
                android:id="@+id/voiceWaveform"
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <!-- Duration Display -->
            <TextView
                android:id="@+id/voiceDurationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00 / 00:05"
                android:textSize="11sp"
                android:textColor="#666666"
                android:typeface="monospace"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Speed Control Button -->
        <TextView
            android:id="@+id/voiceSpeedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1x"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:padding="6dp"
            android:background="@drawable/rounded_gray_bg_small"
            android:minWidth="36dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

</LinearLayout>
