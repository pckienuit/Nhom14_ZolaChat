<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Remote video (full screen) - BACKGROUND -->
    <org.webrtc.SurfaceViewRenderer
        android:id="@+id/remoteVideoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!-- Local video preview (small, top-right corner) -->
    <org.webrtc.SurfaceViewRenderer
        android:id="@+id/localVideoView"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone" />

    <!-- Content overlay -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- Caller information -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <!-- Caller avatar -->
            <ImageView
                android:id="@+id/callerAvatar"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_person"
                android:background="@drawable/circle_background"
                android:padding="24dp"
                android:layout_marginBottom="16dp" />

            <!-- Caller name -->
            <TextView
                android:id="@+id/callerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Người gọi"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Call status -->
            <TextView
                android:id="@+id/callStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đang gọi..."
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:alpha="0.8" />

            <!-- Call duration -->
            <TextView
                android:id="@+id/callDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Incoming call buttons -->
        <LinearLayout
            android:id="@+id/incomingCallButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:visibility="gone">

            <!-- Reject button -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/rejectButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_call_end"
                app:backgroundTint="@android:color/holo_red_dark"
                app:tint="@android:color/white"
                android:layout_marginEnd="32dp" />

            <!-- Accept button -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/acceptButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_call"
                app:backgroundTint="@android:color/holo_green_dark"
                app:tint="@android:color/white" />
        </LinearLayout>

        <!-- Call controls (during call) -->
        <LinearLayout
            android:id="@+id/callControls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:visibility="gone">

            <!-- Microphone button -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/micButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:src="@drawable/ic_mic"
                app:backgroundTint="@color/colorPrimary"
                app:tint="@android:color/white"
                app:fabSize="normal" />

            <!-- Camera button (video calls only) -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/cameraButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:src="@drawable/ic_videocam"
                app:backgroundTint="@color/colorPrimary"
                app:tint="@android:color/white"
                app:fabSize="normal"
                android:visibility="gone" />

            <!-- Switch camera button (video calls only) -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/switchCameraButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:src="@drawable/ic_cameraswitch"
                app:backgroundTint="@color/colorPrimary"
                app:tint="@android:color/white"
                app:fabSize="normal"
                android:visibility="gone" />

            <!-- Speaker button -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/speakerButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:src="@drawable/ic_volume_up"
                app:backgroundTint="@color/colorPrimary"
                app:tint="@android:color/white"
                app:fabSize="normal" />

            <!-- End call button -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/endCallButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:src="@drawable/ic_call_end"
                app:backgroundTint="@android:color/holo_red_dark"
                app:tint="@android:color/white"
                app:fabSize="normal" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
